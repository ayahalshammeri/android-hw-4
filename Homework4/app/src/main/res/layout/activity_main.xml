<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9DDA"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="cursive"
        android:text="Grade Calculator:"
        android:textColor="#000000"
        android:textSize="50sp"
        android:typeface="normal" />

    <TextView
     android:id="@+id/textView3"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="1dp"
     android:layout_marginTop="260dp"
     android:layout_marginEnd="5dp"
     android:background="#99FFEB3B"
     android:ems="10"
     android:fontFamily="sans-serif-light"
     android:inputType="textPersonName"
     android:text="Mid term :                   final :"
     android:textAlignment="center"
     android:textAllCaps="false"
     android:textSize="25sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/textView4"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:layout_alignParentStart="true"
     android:layout_alignParentTop="true"
     android:layout_alignParentEnd="true"
     android:layout_marginStart="2dp"
     android:layout_marginTop="111dp"
     android:layout_marginEnd="1dp"
     android:background="#99FFEB3B"
     android:ems="10"
     android:fontFamily="sans-serif-light"
     android:inputType="textPersonName"
     android:text="   Quizes :                Homework :"
     android:textAlignment="center"
     android:textAllCaps="false"
     android:textSize="25sp"
     android:textStyle="bold" />

    <EditText
        android:id="@+id/quizes"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="175dp"
        android:background="#99FFEB3B"
        android:ems="10"
        android:hint="%15"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/homework"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignTop="@+id/quizes"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="289dp"
        android:layout_marginTop="1dp"
        android:background="#99FFEB3B"
        android:ems="10"
        android:hint="%25"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/midTerms"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="325dp"
        android:background="#99FFEB3B"
        android:ems="10"
        android:hint="%30"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/final1"
        android:layout_width="68sp"
        android:layout_height="68sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="322dp"
        android:layout_marginEnd="51dp"
        android:background="#99FFEB3B"
        android:ems="10"
        android:hint="%30"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="sans-serif-light"
        android:text="fill in the blank :"
        android:textAllCaps="true"
        android:textSize="25sp" />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="405dp"
        android:layout_marginEnd="2dp"
        android:background="#4D3F51B5"
        android:fontFamily="sans-serif-light"
        android:text="CALCULATE !!                        "
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-light"
        android:text="Your grade is :"
        android:textAlignment="center"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="19dp"
        android:background="#00673AB7"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/aw" />


    <TextView
        android:id="@+id/grade"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="-3dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#4CAF50"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="125dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="583dp"
        android:layout_marginEnd="258dp"
        android:backgroundTint="#4D3F51B5"
        android:fontFamily="sans-serif-condensed-light"
        android:onClick="resetNumber"
        android:text="reset"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="OnClick" />


</RelativeLayout>